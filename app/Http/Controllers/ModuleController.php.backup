<?php

namespace App\Http\Controllers;

use App\Models\Module;
use Illuminate\Http\Request;
use Illuminate\Support\Facades\Auth;

class ModuleController extends Controller
{
    public function index()
    {
        $user = Auth::user();
        
        $modules = Module::active()
            ->forClass($user->class_id)
            ->with(['classes', 'creator'])
            ->latest()
            ->get();

        return view('modules.index', compact('modules'));
    }

    public function show($id)
    {
        $user = Auth::user();
        
        $module = Module::active()
            ->forClass($user->class_id)
            ->with(['classes', 'creator'])
            ->findOrFail($id);

        // Track view
        \DB::table('user_modules')->updateOrInsert(
            ['user_id' => $user->id, 'module_id' => $module->id],
            ['last_accessed_at' => now(), 'updated_at' => now()]
        );

        return view('modules.show', compact('module'));
    }

    public function viewPdf($id)
    {
        $module = Module::active()
            ->forClass(Auth::user()->class_id)
            ->findOrFail($id);

        $filePath = storage_path('app/public/' . $module->file_path);

        if (!file_exists($filePath)) {
            abort(404, 'File not found');
        }

        return response()->file($filePath);
    }

    public function downloadPdf($id)
    {
        $module = Module::active()
            ->forClass(Auth::user()->class_id)
            ->findOrFail($id);

        $filePath = storage_path('app/public/' . $module->file_path);

        if (!file_exists($filePath)) {
            abort(404, 'File not found');
        }

        return response()->download($filePath, $module->title . '.' . $module->file_type);
    }
}